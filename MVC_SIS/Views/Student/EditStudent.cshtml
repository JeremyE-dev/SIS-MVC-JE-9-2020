@model Exercises.Models.ViewModels.StudentVM
@{
    ViewBag.Title = "EditStudent";
}

<h2>EditStudent</h2>

<div class="row">
    <div class="col-xs-12">
       @Html.ActionLink("Return to List", "List", "Student")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
     

        @using (Html.BeginForm())
        {
            <div class="col-xs-12 col-sm-7">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title"> Edit Personal Details</h4>
                    </div>
                    <div class="panel-body">
                        @Html.HiddenFor(s => s.Student.StudentId)
                        <div class="form-group">
                            <label>First Name:</label>
                            @Html.TextBoxFor(s => s.Student.FirstName, new { @class = "form-control", placeholder = "First Name" })
                        </div>
                        <div class="form-group">
                            <label>Last Name:</label>
                            @Html.TextBoxFor(s => s.Student.LastName, new { @class = "form-control", placeholder = "Last Name" })
                        </div>

                        <div class="form-group">
                            <label>Major:</label>
                            @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                        </div>


                        <div class="form-group">
                            <label>GPA:</label>
                            @Html.TextBoxFor(s => s.Student.GPA, new { @class = "form-control", placeholder = "GPA" })
                        </div>


                        <!--
    <h4>Courses</h4>
    <div class="form-group">
        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
    </div>
    -->
                        <!--
                        @Html.HiddenFor(a => a.Student.Address.AddressId)
                        <div class="form-group">
                            <label>Address Id:</label>
                            @Html.TextBoxFor(s => s.Student.Address.AddressId, new { @class = "form-control", placeholder = "Address ID" })
                        </div>
                        -->

                    <div class="form-group">
                        <label>Street Address 1:</label>
                        @Html.TextBoxFor(s => s.Student.Address.Street1, new { @class = "form-control", placeholder = "Street Address 1" })
                        <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.Address.Street1)</span>
                    </div>

                        <div class="form-group">
                            <label>Street Address 2:</label>
                            @Html.TextBoxFor(s => s.Student.Address.Street2, new { @class = "form-control", placeholder = "Street Address 2" })
                        </div>

                        <div class="form-group">
                            <label>City:</label>
                            @Html.TextBoxFor(s => s.Student.Address.City, new { @class = "form-control", placeholder = "City" })
                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.Address.City)</span>
                        </div>

                        <div class="form-group">
                            <label>State:</label>
                            @Html.TextBoxFor(s => s.Student.Address.State.StateAbbreviation, new { @class = "form-control", placeholder = "State" })
                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.Address.State.StateAbbreviation)</span>
                        </div>

                        <div class="form-group">
                            <label>Postal Code:</label>
                            @Html.TextBoxFor(s => s.Student.Address.PostalCode, new { @class = "form-control", placeholder = "Postal Code" })
                            <span class="text-danger">@Html.ValidationMessageFor(s => s.Student.Address.PostalCode)</span>
                        </div>



                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        }

      





    </div>
</div>

