
@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "EditCourse";
}

<h2>EditCourse</h2>

<div class="row">
    <div class="col-xs-12">

        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {   @Html.HiddenFor(m => m.CourseId)
        <div class="form-group">
            <label>Course</label>
            <!--Hidden Field with course ID-->
            @Html.TextBoxFor(c => c.CourseName, new { @class = "form-control", placeholder = "Course Name" })
            <span class="text-danger">@Html.ValidationMessageFor(c => c.CourseName)</span>
        </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>